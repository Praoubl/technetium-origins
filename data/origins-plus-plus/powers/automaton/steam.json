{
	"name":"Steam-Powered",
	"description":"You are powered by Steam, generated from water by Fire.",
	"type":"origins:multiple",
	"exhausting":{
		"type": "origins:modify_exhaustion",
		"modifier": {
			"name": "Increased exhaustion",
			"operation": "multiply_base",
			"value": 4.0
		}
	},
	"generate":{
		"type":"origins:action_over_time",
		"interval":400,
		"entity_action":{ "type":"origins:and", "actions": [
			{
				"type": "origins:feed",
				"food": 1,
				"saturation": 0
			},
			{
				"type":"origins:change_resource",
				"resource": "origins-plus-plus:automaton/fire_bar",
				"operation": "add",
				"change": -50
			},
			{
				"type":"origins:change_resource",
				"resource": "origins-plus-plus:automaton/water_bar",
				"operation": "add",
				"change": -50
			}
		]},
		"condition":{"type":"origins:and","conditions":[
			{
				"type": "origins:food_level",
				"comparison": "<",
				"compare_to": 20
			},
			{
				"type":"origins:resource",
				"resource":"origins-plus-plus:automaton/fire_bar",
				"comparison":">",
				"compare_to":25
			},
			{
				"type":"origins:resource",
				"resource":"origins-plus-plus:automaton/water_bar",
				"comparison":">",
				"compare_to":25
			}
		]}
	}
}